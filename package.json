{
  "name": "home-automation-user-control-dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail=false --kill-others \"pnpm --filter convex dev\" \"pnpm --filter web dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:convex": "pnpm --filter convex dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "pnpm --filter core build && pnpm --filter web build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
